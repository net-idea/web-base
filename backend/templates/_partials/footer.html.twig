{# NetIdea WebBase Bundle - Footer (White Label)
   Override in your project: templates/_partials/footer.html.twig or templates/bundles/NetIdeaWebBaseBundle/_partials/footer.html.twig
#}
<footer class="footer bg-body-tertiary py-4 mt-5">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6 text-lg-start text-center mb-3 mb-lg-0">
        <p class="mb-0">
          &copy; {{ 'now'|date('Y') }} <strong>{{ company.name|default('Your Company') }}</strong>
        </p>
      </div>
      <div class="col-lg-6 text-lg-end text-center">
        <a class="text-decoration-none me-3" href="{{ path('web_base_page', { slug: 'impressum' }) }}">Impressum</a>
        <a class="text-decoration-none" href="{{ path('web_base_page', { slug: 'datenschutz' }) }}">Datenschutz</a>
      </div>
    </div>

    {% if social.facebook or social.instagram or social.twitter or social.linkedin %}
      <div class="row mt-3">
        <div class="col text-center">
          {% if social.facebook %}
            <a href="{{ social.facebook }}" class="text-decoration-none me-3" target="_blank" rel="noopener noreferrer">
              <i class="fab fa-facebook"></i>
            </a>
          {% endif %}
          {% if social.instagram %}
            <a href="{{ social.instagram }}" class="text-decoration-none me-3" target="_blank" rel="noopener noreferrer">
              <i class="fab fa-instagram"></i>
            </a>
          {% endif %}
          {% if social.twitter %}
            <a href="{{ social.twitter }}" class="text-decoration-none me-3" target="_blank" rel="noopener noreferrer">
              <i class="fab fa-twitter"></i>
            </a>
          {% endif %}
          {% if social.linkedin %}
            <a href="{{ social.linkedin }}" class="text-decoration-none" target="_blank" rel="noopener noreferrer">
              <i class="fab fa-linkedin"></i>
            </a>
          {% endif %}
        </div>
      </div>
    {% endif %}
  </div>
</footer>
